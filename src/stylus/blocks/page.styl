// app

.{$pageRootClassName}
  zoom: 1
  position: relative
  z-index: 1
  display: table
  table-layout: fixed
  width: auto
  min-width: 100%
  height: auto
  min-height: 100%
  padding: 0
  margin: 0
  border: none
  border-collapse: collapse
  outline: none
  background: $pageLayout.bgColor.light
  font-size: 100%
  text-size-adjust: 100%
  overflow-x: auto
  overflow-y: scroll
  -webkit-tap-highlight-color: transparent
  -webkit-overflow-scrolling: touch
  transition: background-color .24s linear
  caret-color: #03a9f4

  selection(#81d4fa, #111)

  @media all and (min-width: 0)
    display: block
    width: 100%
    min-width: auto
    height: 100%
    min-height: auto
    overflow-x: hidden

  &_state_loading
  &_state_unloading
    user-select: none
    pointer-events: none

  &_theme_dark
    background-color: $pageLayout.bgColor.dark

    selection(#01579b, #eee)

  &__body
    zoom: 1
    position: relative
    top: 0
    left: 0
    z-index: 1
    display: table-cell
    width: auto
    min-width: 100%
    height: auto
    min-height: 100%
    padding: 0
    border: 0
    outline: none
    margin: 0
    background: transparent
    font: getFont()
    font-kerning: normal
    letter-spacing: normal
    word-wrap: break-word
    word-break: break-word
    overflow-wrap: break-word
    white-space: normal
    text-transform: none
    direction: ltr
    -webkit-font-smoothing: antialiased
    text-rendering: optimizeLegibility
    -moz-osx-font-smoothing: grayscale
    font-feature-settings: 'liga', 'kern'
    overflow: visible
    opacity: 1

    @media all and (min-width: 0vw)
      display: block
      width: 100%
      width: 100vw
      min-width: auto

    @supports (padding-top: constant(safe-area-inset-top)) or (padding-top: env(safe-area-inset-top))
      padding: var(--safe-area-inset-top, 0) var(--safe-area-inset-right, 0) var(--safe-area-inset-bottom, 0) var(--safe-area-inset-left, 0)

  &__section
  &__layout
    position: relative
    display: block
    margin: 0 auto

  &__section
    padding: 0

  &__layout
    padding: 0 px2em($pageLayout.marginPage[$pageLayout.default])

    for $_layout, $i in $pageLayout.screens
      @media all and (min-width: getMQWidth($i))
        padding: 0 px2em($pageLayout.marginPage[$i])

  &__shadows
    position: fixed
    top: 0
    left: 0
    z-index: 100
    width: 100%
    height: 100%
    visibility: hidden
