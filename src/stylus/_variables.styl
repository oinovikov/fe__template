// Page base classname
$pageRootClassName = 'page'

// Font options
$font = {
  style: normal,
  variant: normal,
  weight: 400,
  size: 12pt,
  height: 1.25,
  family: "'Open Sans', Verdana, Geneva, sans-serif",
}

// Num columns in responsive layout grid
$grid = 12

// Page layout options
$pageLayout = {
  screens: 0 288 360 432 1296,
  default: 3,
  maxWidth: 720 720 720 720 864,
  marginSafe: 12 12 12 12 24,
  marginPage: 0 6 12 18 24,
  bgColor: {
    light: #fff,
    dark: #121212,
  }
}
